// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Stocks {
  id                          Int @id @default(autoincrement())
  symbol                      String @unique // Ticker symbol
  name                        String // Company name
}

model Stats {
  id                          Int @id @default(autoincrement())
  symbol                      String // Ticker symbol
  date                        DateTime // Date of query
  model                       String // Model used
  log_likelihood              Float // Log likelihood
  aic                         Float // Akaike information criterion
  bic                         Float // Bayesian information criterion
  sample                      Int // Sample size
  hqic                        Float // Hannan-Quinn information criterion
  sigma2                      Float // Variance
  ljung_box                   Float // Ljung-Box test
  jarque_bera                 Float // Jarque-Bera test
  prob_q                      Float // Probability of Ljung-Box test
  h                           Float // H statistic
  skew                        Float // Skewness 
  prob_h                      Float // Probability of H statistic
  kurtosis                    Float // Kurtosis
}

model Adf {
  id                          Int @id @default(autoincrement())
  symbol                      String // Ticker symbol
  test                        String // Test used 
  date                        DateTime // Date of query
  test_stat                   Float // Test statistic
  pvalue                      Float // P-value
  lags                        Int // Number of lags used 
  obs                         Int // Number of observations used
  hypothesis                  String // Hypothesis used
}
